%h1 Listing matches

%table
  %tr
    %th Challenger
    %th Defender
    %th Challenger rating
    %th Defender rating
    %th Winner
    %th
    %th
    %th

  - @matches.each do |match|
    %tr
      %td= match.challenger_id
      %td= match.defender_id
      %td= match.challenger_rating
      %td= match.defender_rating
      %td= match.winner_id
      %td= link_to 'Show', match
      %td= link_to 'Edit', edit_match_path(match)
      %td= link_to 'Destroy', match, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Match', new_match_path
