= form_for @player do |f|
  - if @player.errors.any?
    #error_explanation
      %h2= "#{pluralize(@player.errors.count, "error")} prohibited this player from being saved:"
      %ul
        - @player.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :twitter_id
    = f.text_field :twitter_id
  .field
    = f.label :wins
    = f.number_field :wins
  .field
    = f.label :losses
    = f.number_field :losses
  .field
    = f.label :ties
    = f.number_field :ties
  .actions
    = f.submit 'Save'
